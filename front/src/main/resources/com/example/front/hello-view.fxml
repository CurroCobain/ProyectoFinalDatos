<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.front.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <VBox alignment="CENTER" spacing="10.0">
    <Label fx:id="infoLabel" text="Aquí se mostrará la información"/>
    <HBox spacing="10.0">
      <TextField fx:id="textField1" promptText="Campo 1"/>
      <TextField fx:id="textField2" promptText="Campo 2"/>
      <TextField fx:id="textField3" promptText="Campo 3"/>
      <TextField fx:id="textField4" promptText="Campo 4"/>
    </HBox>
  </VBox>

  <HBox spacing="10.0">
    <Button text="Crear" onAction="#onCreateButtonClick"/>
    <Button text="Buscar" onAction="#onSearchButtonClick"/>
    <Button text="Actualizar" onAction="#onUpdateButtonClick"/>
    <Button text="Borrar" onAction="#onDeleteButtonClick"/>
  </HBox>

  <HBox spacing="10.0">
    <Button text="Bases" onAction="#onBasesButtonClick"/>
    <Button text="Taxis" onAction="#onTaxisButtonClick"/>

  </HBox>
</VBox>